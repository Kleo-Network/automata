{
    "manifest_version": 3,
    "name": "Kleo Connect",
    "version": "1.0",
    "description": "The extension is used for communicating with Kleo Ecosystem.",
    "background": {
      "service_worker": "background.js"
    },

    "permissions": [
        "tabs",
        "storage",
        "history",
        "activeTab",
        "http://127.0.0.1:5001/",
        "http://localhost:5173/",
        "https://app.kleo.network/*",
        "https://api.kleo.network/*"
    ],
    "content_scripts": [
      {
        "matches": ["http://localhost:5173/*","https://app.kleo.network/*"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["injectedScript.js"],
        "matches": ["http://localhost:5173/*","https://app.kleo.network/*"]
      }
    ]
  }
  